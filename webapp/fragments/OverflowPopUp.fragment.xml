<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover placement="Auto" showHeader="false" title="Customer: {SearchCustomerModel>customCustomerCustKna1DTO/kunnr}">
		<content>
			<List id="list">
				<StandardListItem title="Edit" type="Active"
					info="{SearchCustomerModel>/info}" icon="sap-icon://edit"
					press="onEditCustomer"/>
				<StandardListItem title="Copy" type="Active"
						info="{SearchCustomerModel>/info}" icon="sap-icon://copy"
					press="onCopyCustomer"/>
				<StandardListItem title="Block" type="Active"
						info="{SearchCustomerModel>/info}" icon="sap-icon://cancel"
					press="onBlockCustomer"/>
				<StandardListItem title="Delete" type="Active" press="onDeleteCustomer"
						info="{SearchCustomerModel>/info}" icon="sap-icon://delete"/>
			</List>
		</content>
	</Popover>
</core:FragmentDefinition>