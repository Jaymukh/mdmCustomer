<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
		adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
		singleContainerFullSize="false">
		<form:content>
			<core:Title text="General Data"/>
			<Label text="Change Request ID"/>
			<Input
				value="{ parts: [ 'Customer>/createCRCustomerData/crID', 'Customer>/createCRCustomerData/formData/parentDTO/customData/cust_kna1/entity_id'], formatter: '.formatCR_Entiry_ID' }"
				enabled="false"/>
			<Label text="Description" required="true"/>
			<TextArea value="{Customer>/changeReq/genData/desc}"/>
			<Label text="Priority"/>
			<Select forceSelection="false" selectedKey="{Customer>/changeReq/genData/priority}"
				items="{Customer>/createCRDD/CR_PRIORITY}">
				<items>
					<core:Item text="{Customer>taxonomy_name}" key="{Customer>taxonomy_code}"/>
				</items>
			</Select>
			<Label text="Due Date"/>
			<DatePicker displayFormat="dd-MM-YYYY" valueFormat="YYYYMMdd" value="{Customer>/changeReq/genData/dueDate}"></DatePicker>
			<Label text="Reason"/>
			<ComboBox editable="false" selectedKey="{Customer>/changeReq/genData/reason}" showSecondaryValues="true"
				items="{Customer>/createCRDD/CR_CHANGE_REQ_TYPE}">
				<items>
					<core:ListItem text="{Customer>taxonomy_name}" additionalText="{Customer>taxonomy_id}"
						key="{Customer>taxonomy_id}"/>
				</items>
			</ComboBox>
			<core:Title text="Process Data"/>
			<Label text="Status"/>
			<Input value="{Customer>/changeReq/genData/status}" enabled="false"/>
			<Label text="Current Work Item"/>
			<Input value="{Customer>/changeReq/genData/currWrkItem}" enabled="false"/>
			<Label text="Created By"/>
			<Input value="{Customer>/changeReq/genData/createdBy}" enabled="false"/>
			<Label text="Date/Time of Creation"/>
			<Input value="{Customer>/createCRCustomerData/formData/parentDTO/customData/gen_adrc/gen_adrc_1/date_from}" enabled="false"/>
			<Input value="{Customer>/createCRCustomerData/crTime}" enabled="false">
				<layoutData>
					<l:GridData span="XL2 L1 M3 S4"/>
				</layoutData>
			</Input>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>