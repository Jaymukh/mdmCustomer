<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<VBox>
		<Table items="{Customer>/addAddressRows}">
			<headerToolbar>
				<Toolbar>
					<ToolbarSpacer></ToolbarSpacer>
					<Button text="Add" press="onAddCompanyCode"></Button>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<header>
						<Label text="Actions" design="Bold"></Label>
					</header>
				</Column>
				<Column>
					<header>
						<Label text="ID" design="Bold"></Label>
					</header>
				</Column>
				<Column>
					<header>
						<Label text="Bank Country" design="Bold"></Label>
					</header>
				</Column>
				<Column>
					<header>
						<Label text="Bank Key" design="Bold"></Label>
					</header>
				</Column>
				<Column>
					<header>
						<Label text="Bank Account" design="Bold"></Label>
					</header>
				</Column>
				<Column>
					<header>
						<Label text="Account Name" design="Bold"></Label>
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{Customer>lfb1/bukrs}"></Text>
						<Text text="{Customer>lfb1/AKONT}"></Text>
						<Text text="{Customer>lfb1/bukrs}"></Text>
						<Text text="{Customer>lfb1/bukrs}"></Text>
						<Text text="{Customer>lfb1/AKONT}"></Text>
						<Text text="{Customer>lfb1/bukrs}"></Text>
						<Text text="{Customer>lfb1/bukrs}"></Text>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
			adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
			singleContainerFullSize="false">
			<form:content>
				<core:Title text="Bank Details"/>
				<Label text="Bank Details ID"/>
				<Input value="{Customer>/cust_knbk/bvtyp}"/>
				<Label text="Bank Account"/>
				<Input value="{Customer>/cust_knbk/bkont}"/>
				<Label text="Account Holder"/>
				<Input value="{Customer>/cust_knbk/koinh}"/>
				<Label text="IBAN"/>
				<Input value="{Customer>/cust_knbk/tiban}"/>
				<Label text="Account Name"/>
				<Input value="{Customer>/cust_knbk/bankn}"/>
				<Label text="Control Key"/>
				<Input value="{Customer>/cust_knbk/bkont}"/>
				<Label text="Reference Details"/>
				<Input value="{Customer>/cust_knbk/bkref}"/>
				<Label text="Collection Authorization"/>
				<CheckBox/>
				<core:Title text="Bank Data"/>
				<Label text="Bank Country"/>
				<ComboBox items="{Dropdowns>/T005}" selectedKey="{Customer>/gen_bnka/banks}">
					<core:Item key="{Dropdowns>land1}" text="{Dropdowns>landx}"/>
				</ComboBox>
				<Label text="Bank Key"/>
				<Input value="{Customer>/gen_bnka/bankl}" showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true"/>
				<Label text="Bank Name"/>
				<Input value="{Customer>/gen_bnka/banka}" editable="false"/>
				<Label text="Street"/>
				<Input value="{Customer>/gen_bnka/stras}" editable="false"/>
				<Label text="City"/>
				<Input value="{Customer>/gen_bnka/ort01}" editable="false"/>
			</form:content>
		</form:SimpleForm>
	</VBox>
</core:FragmentDefinition>