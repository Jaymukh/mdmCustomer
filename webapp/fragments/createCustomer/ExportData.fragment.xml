<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
		adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
		singleContainerFullSize="false">
		<form:content>
			<core:Title text="Classification"/>
			<Label text="Biochemical Warfare"/>
			<CheckBox select="onSelectCheckBox" editable="{App>/edit}">
				<customData>
					<core:CustomData key="/cust_kna1/ccc01" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Nuclear Nonproliferation"/>
			<CheckBox select="onSelectCheckBox" editable="{App>/edit}">
				<customData>
					<core:CustomData key="/cust_kna1/ccc02" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="National Security"/>
			<CheckBox select="onSelectCheckBox" editable="{App>/edit}">
				<customData>
					<core:CustomData key="/cust_kna1/ccc03" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Missile Technology"/>
			<CheckBox select="onSelectCheckBox" editable="{App>/edit}">
				<customData>
					<core:CustomData key="/cust_kna1/ccc04" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<core:Title text="Usage"/>
			<Label text="Non-Military Use"/>
			<CheckBox select="onSelectCheckBox" editable="{App>/edit}">
				<customData>
					<core:CustomData key="/cust_kna1/civve" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Military Use"/>
			<CheckBox select="onSelectCheckBox" editable="{App>/edit}">
				<customData>
					<core:CustomData key="/cust_kna1/milve" value="X"></core:CustomData>
				</customData>
			</CheckBox>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>